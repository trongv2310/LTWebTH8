@model IEnumerable<LTWeb08_Bai02.Models.SACH>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Sách</h3>
    <a href="@Url.Action("Create","SACH")" class="btn btn-primary btn-sm">Thêm mới</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Không có sách.</div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-light">
            <tr>
                <th style="width:80px">Mã</th>
                <th>Tên sách</th>
                <th style="width:120px">Ảnh</th>
                <th>Ngày cập nhật</th>
                <th style="width:150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSach</td>
                    <td>@item.TenSach</td>
                    <td>
                        @{
                            var img = item.AnhBia;
                            if (string.IsNullOrWhiteSpace(img))
                            {
                                img = "~/Content/Images/Books/default.png";
                            }
                            else if (!img.StartsWith("~") && !img.StartsWith("/"))
                            {
                                img = "~/" + img.TrimStart('/');
                            }
                            var imgUrl = Url.Content(img);
                        }
                        <img src="@imgUrl" alt="cover" style="width:80px;height:100px;object-fit:cover;border-radius:4px" />
                    </td>
                    <td>@(item.NgayCapNhat?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>
                        <a href="@Url.Action("Edit", "SACH", new { id = item.MaSach })" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("Details", "SACH", new { id = item.MaSach })" class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="@Url.Action("Delete", "SACH", new { id = item.MaSach })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sách này?');">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
